/home/deploy/apps/*/current/log/*.log {
  su deploy deploy
  daily
  rotate 14
  missingok
  notifempty
  compress
  delaycompress
  copytruncate
  dateext
  lastaction
    HOSTNAME=`hostname`
{% for server in groups.storage %}
    rsync -a /home/deploy/apps/{{ app_name }}/current/log/*.gz {{ deploy_user }}@{{ server }}:~/logs/rails/
{% endfor %}
  endscript
}
