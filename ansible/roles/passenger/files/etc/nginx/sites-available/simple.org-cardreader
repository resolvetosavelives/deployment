# Pre-start passenger so the first request isn't slow
passenger_pre_start http://cardreader.simple.org/;

server {
  listen 80 default_server;
  server_name cardreader.simple.org;

  # Send all traffic to HTTPS
  return 301 https://cardreader.simple.org$request_uri;
}

server {
  listen 443;
  server_name cardreader.simple.org;

  ssl on;
  ssl_certificate /etc/ssl/simple.org.crt;
  ssl_certificate_key /etc/ssl/simple.org.key;

  client_max_body_size 4G;
  keepalive_timeout 10;

  root /home/deploy/apps/cardreader/current/public;
  passenger_app_root /home/deploy/apps/cardreader/current;
  passenger_enabled on;
  rails_env production;
  passenger_min_instances 1;
  passenger_start_timeout 300;

  # redirect server error pages to the static page /50x.html
  error_page   500 502 503 504  /50x.html;
  location = /50x.html {
    root   html;
  }

  location ~ ^/(assets|images|javascripts|stylesheets|swfs|system)/ {
    gzip_static on;
    expires     max;
    add_header  Cache-Control public;
    add_header  Last-Modified "";
    add_header  ETag "";
    break;
  }

  location = /favicon.ico {
    expires    max;
    add_header Cache-Control public;
  }

  auth_basic           "Please login to access Cardreader";
  auth_basic_user_file /etc/apache2/.htpasswd; 
}
