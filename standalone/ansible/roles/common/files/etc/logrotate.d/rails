/home/deploy/apps/*/current/log/*.log {
  su deploy deploy
  daily
  rotate 14
  missingok
  notifempty
  compress
  delaycompress
  copytruncate
  dateext
  lastaction
    HOSTNAME=`hostname`
    /usr/bin/s3cmd sync /home/deploy/apps/*/current/log/*.gz "s3://simple-server-archived-logs/$HOSTNAME/rails/"
  endscript
}
